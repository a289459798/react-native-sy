<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#C63E3E">

    <RelativeLayout
        android:id="@+id/loading_parent"
        android:background="@drawable/oauth_loading_bg"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/oauth_loading_dialog_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/oauth_anim_loading_dialog" />
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/sysdk_anim"
            />
        <TextView
            android:id="@+id/oauth_loading_dialog_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oauth_loading_dialog_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textSize="16sp" />
    </RelativeLayout>
    
</RelativeLayout>
